{
  "compilerOptions": {
    "target": "es2016",
    "allowJs": true,
    "baseUrl": "./src",
    "lib": ["ES6", "ES2021.String", "dom", "dom.iterable"],
    /* Modules */
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src", "src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
